      done
      echo ">>> BEGIN ${TAG_MANIFEST_PATH} <<<"
      cat ${TAG_MANIFEST_PATH}
      echo ">>> END ${TAG_MANIFEST_PATH} <<<"
      if [ ! -z $KITMAKER ] && [ ! -z $TRIGGER ]; then
