      set +e
      if [[ -z ${TAG_MANIFEST_PATH} ]]; then export TAG_MANIFEST_PATH=TAG_MANIFEST; fi
      for tag in $(env | grep 'CUDA.*_TAGS' | cut -f2 -d=); do
